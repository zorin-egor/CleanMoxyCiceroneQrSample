<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/default_stroke"
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/default_stroke"
                android:color="@color/colorBlack" />
            <padding
                android:bottom="@dimen/default_stroke"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>